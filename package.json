{
  "name": "LevelPad",
  "version": "0.0.1",
  "description": "Webapp zur Unterstützung einer Bewertung nach dem Niveaustufenmodell",
  "private": true,
  "scripts": {
    "postinstall": "bower install",
    "run": "node server.js",
    "run-auto": "nodemon --delay 2.5 --ignore public server.js",
    "test": "set NODE_ENV=test && mocha --reporter spec --recursive app/tests",
    "test-cov": "set NODE_ENV=test && istanbul cover ./node_modules/mocha/bin/_mocha -- --recursive app/tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fh-koeln/LevelPad"
  },
  "keywords": [
    "FH",
    "Köln"
  ],
  "author": "fh-koeln",
  "bugs": {
    "url": "https://github.com/fh-koeln/LevelPad/issues"
  },
  "homepage": "https://github.com/fh-koeln/LevelPad",
  "engines": {
    "node": "0.10.x"
  },
  "dependencies": {
    "acl": "~0.4.3",
    "async": "~0.9.0",
    "body-parser": "~1.6.3",
    "compression": "~1.0.11",
    "connect-mongo": "~0.4.1",
    "connect-timeout": "~1.2.2",
    "cookie-parser": "~1.3.2",
	"debug": "~1.0.4",
    "errorhandler": "~1.1.1",
    "express": "~4.8.3",
    "express-session": "~1.7.5",
    "helmet": "0.4.0",
    "imap": "~0.8.12",
    "mongoose": "~3.8.14",
    "morgan": "~1.2.2",
    "passport": "~0.2.0",
    "passport-local": "~1.0.0",
    "path-to-regexp": "~0.2.5",
    "common-errors": "~0.4.17"
  },
  "devDependencies": {
    "bower": "~1.3.9",
    "nodemon": "~1.2.1",
    "mocha": "~1.21.4",
    "chai": "~1.9.1",
    "sinon": "~1.10.3",
    "supertest": "~0.13.0",
    "istanbul": "~0.3.0",
    "coveralls": "~2.11.1"
  }
}
